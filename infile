
void	print_error(char *message, char *arg, int exit_code, t_minishell *minishell)
{
	write(STDERR_FILENO, message, ft_strlen(message));
	if (arg != NULL)
		write(STDERR_FILENO, arg, ft_strlen(arg));
	write(STDERR_FILENO, "\n", 1);
	// free_all(minishell);
	error_code = exit_code;
	exit(error_code);
}

void	parse_and_check_cmd(t_minishell *minishell, char **cmd)
{
	minishell->cmds->path_cmd = get_path_cmd(cmd[0], ft_get_path(minishell->env));
	if (access(minishell->cmds->path_cmd, F_OK) == -1)
		print_error("command not found: ", cmd[0], 127, minishell);
}

